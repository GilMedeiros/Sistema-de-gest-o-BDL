<%- include('../partials/header.ejs') %>
<div class="container">
    <div class="card">
        <div class="card-header">Editar cliente</div>
        <div class="card-body">            
            <form method="POST" action="/customer/edit">
                <input name="name" class="form-control" type="text" placeholder="Nome do cliente" value="<%= customer.name %>"><br>
                <input name="phone" class="form-control" type="text" placeholder="Telefone do cliente" value="<%= customer.phone %>"><br>
                <input name="email" class="form-control" type="text" placeholder="Email do cliente" value="<%= customer.email %>"><br>
                <input name="cpf" class="form-control" type="text" placeholder="CPF do cliente" value="<%= customer.cpf %>"><br>
                <input name="cnpj" class="form-control" type="text" placeholder="CNPJ do cliente" value="<%= customer.cnpj %>"><br>
                <input name="store" class="form-control" type="text" placeholder="Loja do cliente" value="<%= customer.store %>"><br>
                <input name="zipcode" class="form-control" type="text" placeholder="CEP do cliente" value="<%= customer.zipcode %>"><br>
                <input name="adress" class="form-control" type="text" placeholder="Endereço do cliente" value="<%= customer.adress %>"><br>
                <input type="hidden" name="id" value="<%= customer.id %>">
                <input name="observation" class="form-control" type="text" placeholder="Observações do cliente" value="<%= customer.observation %>"><br>
                <button class="btn btn-success">Atualizar</button> 
            </form>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>